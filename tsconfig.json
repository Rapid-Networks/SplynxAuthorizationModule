{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ESNext",
    /* Modules */
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    /* Emit */
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    /* Type Checking */
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*"]
}
